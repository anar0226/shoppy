rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload to store directories
    match /stores/{storeId}/{allPaths=**} {
      allow read: if true; // Public read access for store content (logos, product images)
      allow write: if request.auth != null; // Any authenticated user can upload to store directories
    }
    
    // Allow authenticated users to upload to general upload directories
    match /uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload to admin directories
    match /admin/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to upload background images for seller cards
    match /seller_cards/{storeId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
